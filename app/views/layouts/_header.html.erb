<div class="pull-right">
		<% if current_user %>
			Welcome <%= link_to current_user.name, user_path(current_user.id) %>!
			<%= link_to "Log out", session_path, method: :delete %>
		<% else %>
			<%= link_to "Sign up", new_path %>
			<%= link_to "Log In", login_path if !@is_login %>
		<% end %>
</div>